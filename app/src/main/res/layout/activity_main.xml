<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="com.example.codetribe.thusang.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:padding="6dp"
        android:id="@+id/buttons">

        <TextView
            android:layout_below="@+id/lw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/labelRequestList"
            android:text="Query list prompt"
            android:padding="5dp"
            android:textAlignment="center" />


        <CheckBox
            android:id="@+id/checkboxSendLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Include Location"/>

        <Button
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#008000"
            android:layout_marginTop="5dp"
            android:onClick="Ok"
        android:text="Safe"/>

        <Button
            android:id="@+id/no"
            android:paddingLeft="3dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="No"
            android:background="#FF0000"
            android:text="HELP!!"/>

        <Button
            android:id="@+id/responder"
            android:onClick="Responder"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:background="#FFA500"
            android:paddingLeft="5dp"
            android:text="Auto Responder" />
    </LinearLayout>





</RelativeLayout>
