<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_anchor="@color/bg_screen2"
    tools:context="com.example.codetribe.thusang.RegisterActivity">

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:lines="1"

                android:elevation="10dp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:padding="6dp"
                android:hint="Name"/>


            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:elevation="10dp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:lines="1"
                android:padding="6dp"
                android:allowUndo="true"
                android:inputType="textEmailAddress"
                android:hint="Email" />


            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:elevation="10dp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:padding="6dp"
                android:inputType="textPassword"
                android:hint="password" />

            <EditText
                android:id="@+id/ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:lines="2"
                android:elevation="10dp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:padding="6dp"
                android:hint="Address"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">
        <TextView
            android:id="@+id/gender_textview"
            android:paddingRight="15dp"
            android:layout_marginStart="@dimen/desc_padding"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:fontFeatureSettings="password"
            android:textSize="20dp"
            android:fontFamily="password"/>
        <RadioGroup
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/gender_textview"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:checked="true"

                />
            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Male"
                />
        </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/desc_padding"
        android:padding="10dp">
        <Button
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            android:background="@color/bg_screen1"
            android:text="sign_up"
            android:textColor="@android:color/white" />


        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/desc_padding"
            android:layout_marginTop="40dp"
            android:background="@color/bg_screen2"
            android:text="login"
            android:textColor="@android:color/white" />
    </LinearLayout>



        </RelativeLayout>



</LinearLayout>
